<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="1 Jun"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:id="@+id/date_tv"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/text_size_18"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/title_tv"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/discribtion_tv"
                android:maxLines="3"
                tools:text="ddhfsddshjdshfjshdjfhdshfjhdjfhdjshfjshjfhsjhfjhsjfhsjhfsjfhjshjfhjshfhsjfhjshfjhjshjfhjshfjjfjsjfjsfhjshfjshfjsfhjfhjshfjshjfhshjfhjsfhjshfjshfjshfjshfjshfjshjshsjjsfjfshgrreeegrefger"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>