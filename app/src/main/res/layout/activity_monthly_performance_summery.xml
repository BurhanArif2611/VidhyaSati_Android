<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Teacher.MonthlyPerformanceSummeryActivity">
<include layout="@layout/tool_bar_colour"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/monthly_performance_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
         android:layout_below="@+id/tool_barLayout"
        android:layout_above="@+id/bottom_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_found"
        android:textColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_20"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/no_data_tv"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pre"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_previous"
                android:background="@drawable/background_button"
                android:textColor="@color/mdtp_white"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/previous_tv"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableRight="@drawable/ic_reply"
                android:background="@drawable/background_button"
                android:textColor="@color/mdtp_white"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/next_tv"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/app_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_text"
            android:id="@+id/total_count_tv"/>
    </LinearLayout>
</RelativeLayout>