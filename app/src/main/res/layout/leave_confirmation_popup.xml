<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/corners">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_exclamation_leaves"
    android:id="@+id/status_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Confirmation Required"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_20"
            android:id="@+id/title_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Confirmation Required"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary_text"
            android:id="@+id/content_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/corner_border">

            <EditText
                android:id="@+id/reason_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/poppins_regular"
                android:hint="Reason here ..."
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/colorPrimary"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text" />
        </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_button"
    android:layout_margin="@dimen/_10sdp"
    android:text="Confirm"
    android:textColor="@color/mdtp_white"
    android:fontFamily="@font/poppins_regular"
    android:id="@+id/confirm_btn"/>

    </LinearLayout>
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_cross_leaves"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/_20sdp"
    android:id="@+id/cancel_btn"/>

</RelativeLayout>