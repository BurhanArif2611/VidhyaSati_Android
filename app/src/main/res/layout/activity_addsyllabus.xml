<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Teacher.StudyMaterial.ADDSyllabusActivity">
    <include layout="@layout/tool_bar_colour"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/tool_barLayout"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary">

                <EditText
                    android:id="@+id/select_class_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_classroom"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select Class"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/primary_text"
                    style="@style/InvisibleFocusHolder"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary">

                <EditText
                    android:id="@+id/select_subject_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_classroom"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select Subject"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/primary_text"
                    style="@style/InvisibleFocusHolder"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary"
                android:visibility="gone">

                <EditText
                    android:id="@+id/select_material_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_classroom"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select Material Type"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/primary_text"
                    style="@style/InvisibleFocusHolder"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary">

                <EditText
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_classroom"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Title"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapWords"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/primary_text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_8sdp"
                android:visibility="visible"
                android:layout_weight="3">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:text="Notes"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/select_notes_file"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/select_notes_tv"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="2"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_select_file"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/primary_text"
                android:id="@+id/view_notes_file_tv"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_8sdp"
                android:visibility="visible"
                android:weightSum="3"
                android:id="@+id/sample_paper_layout">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:text="Sample Paper"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/select_sample_paper_file"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sample_paper_tv"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="2"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_select_file"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/primary_text"
                android:id="@+id/view_samplepaper_file_tv"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_8sdp"
                android:visibility="visible"
                android:weightSum="3"
                android:id="@+id/video_link_layout">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:text="Video Link"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/video_inputlayout"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/video_link_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="VIdeo Link"
                        android:textColorHint="@color/colorPrimary"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_select_link"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/primary_text"
                android:id="@+id/view_video_link_tv"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/corner_border"
                android:id="@+id/type_assignment_layout">

                <EditText
                    android:id="@+id/type_assignment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Syllabus Description here ..."
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:backgroundTint="@color/colorPrimary"
                android:visibility="gone">

                <EditText
                    android:id="@+id/select_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_classroom"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Select Attachment Type"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/primary_text"
                    style="@style/InvisibleFocusHolder"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_8sdp"
                android:id="@+id/select_layout"
                android:visibility="gone">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:text="Select Pick"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/select_file"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/select_tv"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"/>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/_5sdp"
                android:id="@+id/submit_btn"
                android:layout_margin="@dimen/_10sdp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:text="Watch Video"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/_5sdp"
                android:id="@+id/watch_video_btn"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:text="View Image"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/_5sdp"
                android:id="@+id/view_image_btn"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>