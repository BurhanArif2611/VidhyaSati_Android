<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Teacher.AttendenceListActivity">
<include layout="@layout/tool_bar_colour"/>
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_calender_white"
           android:background="@android:color/transparent"
           android:layout_alignParentRight="true"
           android:layout_margin="@dimen/_15sdp"
           android:visibility="gone"
           android:id="@+id/attendence_img_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mdtp_white"
        android:orientation="horizontal"
        android:id="@+id/top_layout"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_below="@+id/tool_barLayout">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/total_tv"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.5">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/all_present_checkbox"
                android:checked="true"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorRed"
                android:id="@+id/all_absent_checkbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Present"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/primary_text"
                android:id="@+id/status_tv"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/attendence_list"
        android:layout_above="@+id/bottom_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_class_found"
        android:textColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_20"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/no_data_found_tv"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mdtp_white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/bottom_layout"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" \n Total"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/total_student_tv"
                android:textColor="@color/primary_text"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" \n Present"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/total_present_tv"
                android:textColor="@color/primary_text"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" \n Absent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/total_absent_tv"
                android:textColor="@color/primary_text"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" \n Leave"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/total_leave_tv"
                android:textColor="@color/primary_text"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:text="Submit"
            android:textColor="@color/mdtp_white"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/submit_btn"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>
</RelativeLayout>