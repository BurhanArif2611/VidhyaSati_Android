<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <include
        layout="@layout/app_bar_student_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <ScrollView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:background="@color/colorPrimary"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorPrimary">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:src="@drawable/ic_user_type_driver"
                        app:civ_border_color="@color/colorWhite"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"/>



                    <TextView
                        android:id="@+id/user_email_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_regular"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Profile"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:id="@+id/profile_tv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="About The School"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:id="@+id/about_tv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Terms &amp; Condition"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/terms_condition_tv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Contact Us"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/contact_us_tv"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Switch User"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:visibility="gone"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/share_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Share"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/support_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Support"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/poppins_regular"/>



                    <TextView
                        android:id="@+id/logoutItemNav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Logout"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>